<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calculator.alien.calculator.MainActivity">
<LinearLayout
    android:id="@+id/lmain1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lm1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="300"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LLightblue"
        android:gravity="right"
        android:maxLength="32"
        android:text="Enter the value"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Greenblue">
        <Button
            android:id="@+id/butC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onClickC"
            android:text="C"
            android:textSize="30sp" />
        <Button
            android:id="@+id/butdiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onClickonOperator"
            android:text="/"
            android:textSize="30sp" />
        <Button
            android:id="@+id/butmul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onClickonOperator"
            android:text="*"
            android:textSize="30sp" />
        <Button
            android:id="@+id/butntclr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onClickClearr"
            android:text="X"
            android:textSize="30sp" />

        </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/but7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="7"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/but8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/but9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="9"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/butsub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onClickonOperator"
            android:text="-"
            android:textSize="30sp" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/l2"
        android:layout_weight="1">
        <Button
            android:id="@+id/but4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="4"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/but5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="5"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/but6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="6"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/butadd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onClickonOperator"
            android:text="+"
            android:textSize="30sp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/l3"
        android:layout_weight="1">
        <Button
            android:id="@+id/but1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="1"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/but2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="2"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/but3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="3"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/butbrac"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onClickonBracketss"
            android:text="( )"
            android:textSize="30sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/but0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onCLickonNumber"
            android:text="0"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/butdot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="OnClickOndot"
            android:text="."
            android:textSize="30sp"/>
<Button
    android:id="@+id/ButSign"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/colorPrimary"
    android:onClick="onClickonOperator"
    android:text="%"
    android:textSize="30sp"/>


        <Button
            android:id="@+id/butequal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onClickEquals"
            android:text="="
            android:textSize="30sp"/>



    </LinearLayout>
</LinearLayout>
</LinearLayout>

</RelativeLayout>
